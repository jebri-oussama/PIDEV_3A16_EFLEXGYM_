<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="Controllers.CategorieController"
            prefHeight="400.0" prefWidth="600.0">

    <TableView fx:id="tableViewCategorie" layoutX="8.0" layoutY="18.0" prefHeight="364.0" prefWidth="300.0" AnchorPane.leftAnchor="8.0" AnchorPane.topAnchor="18.0">
        <columns>
            <TableColumn fx:id="idColumn" prefWidth="50.0" text="ID" />
            <TableColumn fx:id="typeColum" prefWidth="100.0" text="Type" />
            <TableColumn fx:id="descriptionColumn" prefWidth="150.0" text="Description" />
            <TableColumn fx:id="deleteColumn" prefWidth="75.0" text="Supprimer" />
            <TableColumn fx:id="selectColumn" prefWidth="100.0" text="Sélectionner" />
        </columns>
    </TableView>

    <!-- Form on the right -->
    <VBox layoutX="320.0" layoutY="38.0" spacing="10.0">
        <children>
            <Label text="Détails du categorie" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #FFA500;" />

            <HBox spacing="10.0">
                <Label text="ID:" style="-fx-text-fill: #FFA500;" />
                <TextField fx:id="txtId"  />
            </HBox>

            <HBox spacing="10.0">
                <Label text="Type:" style="-fx-text-fill: #FFA500;" />
                <TextField fx:id="txttype" />
            </HBox>

            <HBox spacing="10.0">
                <Label text="Description:" style="-fx-text-fill: #FFA500;" />
                <TextField fx:id="Txtdescription" />
            </HBox>
            <!-- Buttons -->
            <HBox spacing="10.0">
                <Button mnemonicParsing="false" onAction="#addCategorie" text="Ajouter" style="-fx-background-color: #FFA500; -fx-text-fill: #000000;" />
                <Button mnemonicParsing="false" onAction="#updatecategorie" text="Appliquer les changements" style="-fx-background-color: #FFA500; -fx-text-fill: #000000;" />
            </HBox>

        </children>
        <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
        </padding>
    </VBox>



</AnchorPane>
