<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.image.Image?>
<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.ProductController" style="-fx-background-color: #FFFFFF;">

    <!-- Logo -->
    <ImageView fx:id="logoImageView" fitWidth="50" fitHeight="50" layoutX="10.0" layoutY="10.0" />

    <!-- Product Details -->
    <VBox layoutX="80.0" layoutY="10.0" spacing="10.0">
        <children>
            <Label text="DÃ©tails du Produit" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #FFA500;" />
            <HBox spacing="10">
                <ImageView fx:id="productImageView" fitWidth="200" fitHeight="200" />
                <VBox spacing="5">
                    <Label fx:id="productNameLabel" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #000000;" />
                    <Label fx:id="productPriceLabel" style="-fx-font-size: 16px; -fx-text-fill: #FFA500;" />
                    <Label fx:id="productDescriptionLabel" wrapText="true" style="-fx-font-size: 14px; -fx-text-fill: #000000;" />
                </VBox>
            </HBox>
        </children>
    </VBox>

    <!-- Table with Search Components -->
    <VBox layoutX="10.0" layoutY="100.0" spacing="10" alignment="CENTER">
        <children>
            <Label text="Recherche par nom:" />
            <HBox spacing="5" alignment="CENTER">
                <TextField fx:id="searchField" promptText="Entrez le nom du produit" />
                <Button text="Rechercher" onAction="#searchByName" />
            </HBox>
            <HBox spacing="5" alignment="CENTER">
                <Button mnemonicParsing="false" onAction="#handleAlimentaireAction" text="Alimentaire" style="-fx-background-color: #FFA500; -fx-text-fill: #000000; -fx-font-size: 7pt; -fx-pref-width: 80px; -fx-pref-height: 30px;" />
                <Button mnemonicParsing="false" onAction="#handleVestimentaireAction" text="Vestimentaire" style="-fx-background-color: #FFA500; -fx-text-fill: #000000; -fx-font-size: 7pt; -fx-pref-width: 80px; -fx-pref-height: 30px;" />
            </HBox>
        </children>
    </VBox>

    <!-- Button "Voir Panier" -->
    <Button layoutX="10.0" layoutY="300.0" onAction="#redirectToPanier">
        <graphic>
            <ImageView fitWidth="20" fitHeight="20">
                <!-- Add the path to your icon image -->
                <Image url="@png-clipart-computer-icons-cart-icon-cdr-eps.png" />
            </ImageView>
        </graphic>
    </Button>

    <!-- ScrollPane for Product FlowPane -->
    <ScrollPane layoutX="250.0" layoutY="100.0" prefWidth="340.0" prefHeight="270.0" hbarPolicy="NEVER" vbarPolicy="AS_NEEDED">
        <content>
            <!-- FlowPane to display products -->
            <FlowPane prefWidth="320.0" prefHeight="260.0" hgap="20" vgap="20" fx:id="productsPane">
                <!-- Dynamically populated product elements will be added here -->
            </FlowPane>
        </content>
    </ScrollPane>

</AnchorPane>
