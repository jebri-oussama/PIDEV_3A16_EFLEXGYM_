<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.control.cell.PropertyValueFactory?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.AfficherSuiviProgresController">
    <children>
        <ImageView fitHeight="100.0" fitWidth="100.0" layoutX="20.0" layoutY="20.0">
            <image>
                <Image url="@logo.png" />
            </image>

        </ImageView>
        <TableView layoutX="50.0" layoutY="150.0" prefHeight="200.0" prefWidth="500.0" fx:id="tableView">
            <columns>
                <TableColumn prefWidth="75.0" text="Nom">
                    <cellValueFactory>
                        <PropertyValueFactory property="nom" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn prefWidth="75.0" text="Prénom">
                    <cellValueFactory>
                        <PropertyValueFactory property="prenom" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn prefWidth="75.0" text="Âge">
                    <cellValueFactory>
                        <PropertyValueFactory property="age" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn prefWidth="75.0" text="Taille">
                    <cellValueFactory>
                        <PropertyValueFactory property="taille" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn prefWidth="75.0" text="Poids">
                    <cellValueFactory>
                        <PropertyValueFactory property="poids" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn prefWidth="75.0" text="Tour de taille">
                    <cellValueFactory>
                        <PropertyValueFactory property="tour_de_taille" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn prefWidth="75.0" text="Sexe">
                    <cellValueFactory>
                        <PropertyValueFactory property="sexe" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn prefWidth="75.0" text="User">
                    <cellValueFactory>
                        <PropertyValueFactory property="user" />
                    </cellValueFactory>
                </TableColumn>
            </columns>
        </TableView>
    </children>
</AnchorPane>
