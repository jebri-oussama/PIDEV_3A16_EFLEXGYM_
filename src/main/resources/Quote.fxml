<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="controller.QuoteController"
      styleClass="main-container"
      spacing="10" alignment="CENTER"
      style="-fx-background-color: #FB8000;"> <!-- Ajout du fond de couleur #FB8000 -->

    <!-- Logo -->
    <ImageView fitHeight="300" fitWidth="300"> <!-- Redimensionnement de l'image du logo -->
        <image>
            <Image url="@logo.png" />
        </image>
    </ImageView>

    <!-- Titre -->
    <Label text="Citation du jour " style="-fx-font-size: 24px; -fx-font-weight: bold;" />

    <!-- Bouton -->
    <Button text="Nouvelle Citation" onAction="#fetchNewQuote" styleClass="custom-button" />

    <!-- Labels pour la citation et l'auteur -->
    <Label fx:id="quoteLabel" styleClass="quote-label" />
    <Label fx:id="authorLabel" styleClass="author-label" />

</VBox>
