        <Button fx:id="generatePDFButton" layoutX="531.0" layoutY="14.0" mnemonicParsing="false" text="Générer PDF" />
         <Label layoutX="677.0" layoutY="42.0" text="Trouvez votre exercice:" textFill="BLACK">
