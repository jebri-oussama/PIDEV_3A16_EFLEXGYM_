<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<AnchorPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="Controllers.AjouterProduitController"
            prefHeight="400.0" prefWidth="600.0">

    <children>
        <VBox layoutX="35.0" layoutY="38.0" spacing="10.0">
            <children>
                <HBox spacing="10.0">
                    <children>
                        <Label text="Nom:" />
                        <TextField fx:id="txtnom" />
                    </children>
                </HBox>
                <HBox spacing="10.0">
                    <children>
                        <Label text="Image:" />
                        <TextField fx:id="txtimage" />
                        <ImageView fx:id="imageView" fitHeight="50" fitWidth="50" />
                    </children>
                </HBox>
                <HBox spacing="10.0">
                    <children>
                        <Label text="Prix:" />
                        <TextField fx:id="txtprix" />
                    </children>
                </HBox>
                <HBox spacing="10.0">
                    <children>
                        <Label text="Quantité:" />
                        <TextField fx:id="txtquantite" />
                    </children>
                </HBox>
                <HBox spacing="10.0">
                    <children>
                        <Label text="Description:" />
                        <TextField fx:id="txtdescription" />
                    </children>
                </HBox>
                <HBox spacing="10.0">
                    <children>
                        <Label text="Categorie:" />
                        <TextField fx:id="txtcategorie" />
                    </children>
                </HBox>
                <HBox spacing="10.0">
                    <children>
                        <Label text="ID Bilan Financière:" />
                        <TextField fx:id="txtid_bilan_financier" />
                    </children>
                </HBox>
                <HBox spacing="10.0">
                    <children>
                        <Label text="ID Admin:" />
                        <TextField fx:id="txtid_admin" />
                    </children>
                </HBox>
                <Button layoutX="321.0" layoutY="304.0" mnemonicParsing="false" onAction="#addProduit" text="Ajouter" />
            </children>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
        </VBox>
    </children>

</AnchorPane>