<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<AnchorPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="gestion_communaute.Controllers.UpdateEvenementController"
            prefHeight="400.0" prefWidth="600.0">

    <children>
        <VBox layoutX="35.0" layoutY="38.0" spacing="10.0">
            <children>
                <HBox spacing="10.0">
                    <children>
                        <Label text="ID:" />
                        <TextField fx:id="txtid" />
                    </children>
                </HBox>
                <HBox spacing="10.0">
                    <children>
                        <Label text="Type:" />
                        <TextField fx:id="txttype" />
                    </children>
                </HBox>
                <HBox spacing="10.0">
                    <children>
                        <Label text="Date de début:" />
                        <TextField fx:id="txtdate_debut" />
                    </children>
                </HBox>
                <HBox spacing="10.0">
                    <children>
                        <Label text="Date de fin:" />
                        <TextField fx:id="txtdate_fin" />
                    </children>
                </HBox>
                <HBox spacing="10.0">
                    <children>
                        <Label text="Durée:" />
                        <TextField fx:id="txtduree" />
                    </children>
                </HBox>
                <Button layoutX="321.0" layoutY="304.0" mnemonicParsing="false" onAction="#updateEvenement" text="Update" />
            </children>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
        </VBox>
    </children>

</AnchorPane>
