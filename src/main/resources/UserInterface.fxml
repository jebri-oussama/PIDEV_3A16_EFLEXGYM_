<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.VBox?>

<FlowPane fx:id="productsPane" prefWidth="600.0" prefHeight="400.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.userInterfaceController">
    <children>
        <!-- Alimentaire button -->
        <Button mnemonicParsing="false" onAction="#handleAlimentaireAction" text="Alimentaire" style="-fx-background-color: #FFA500; -fx-text-fill: #000000; -fx-font-size: 20pt; -fx-pref-width: 250px; -fx-pref-height: 100px;" />

        <!-- Vestimentaire button -->
        <Button mnemonicParsing="false" onAction="#handleVestimentaireAction" text="Vestimentaire" style="-fx-background-color: #FFA500; -fx-text-fill: #000000; -fx-font-size: 20pt; -fx-pref-width: 250px; -fx-pref-height: 100px;" />

        <!-- VBox to center the Voir Panier button -->
        <VBox alignment="CENTER">
            <Button text="Voir Panier" onAction="#redirectToPanier" style="-fx-background-color: #000000; -fx-text-fill: #FFFFFF; -fx-font-size: 20pt; -fx-pref-width: 250px; -fx-pref-height: 100px;" />
        </VBox>
    </children>
</FlowPane>
