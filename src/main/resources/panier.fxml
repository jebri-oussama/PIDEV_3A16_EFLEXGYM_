<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.image.ImageView?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.panierController" style="-fx-background-color: #FFFFFF;">

    <!-- Placeholder for the product image -->
    <ImageView fitWidth="100" fitHeight="100" layoutX="10.0" layoutY="10.0" />

    <!-- Panier section on the right -->
    <VBox layoutX="600.0" layoutY="38.0" spacing="10.0">
        <children>
            <!-- Panier label -->
            <Label text="Panier" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #FFA500;" />
            <!-- VBox for panier items -->
            <VBox fx:id="panierBox" spacing="5"/>
            <!-- Subtotal label -->
            <Label fx:id="subtotalLabel" style="-fx-font-size: 16; -fx-font-weight: bold;"/>
        </children>
        <Button text="Back to Products" onAction="#goBackToProducts"/>
        <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
        </padding>
    </VBox>

</AnchorPane>
